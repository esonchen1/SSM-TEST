<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jld.ssm.dao.UsersExMapper" >
  <select id="checkUsers" parameterType="com.jld.ssm.pojo.UsersEn" resultType="com.jld.ssm.pojo.Users">
    SELECT users.* FROM users
      WHERE account = #{0} AND password = #{1}
  </select>
  <select id="register" parameterType="com.jld.ssm.pojo.UsersEn" resultType="com.jld.ssm.pojo.Users">
    SELECT users.* FROM users
      WHERE account = #{0}
  </select>
</mapper>